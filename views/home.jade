extends layout
block extraStyleSheet
    style.
        body {
            padding: 0;
        }
        .navbar {
            background: rgba(0, 0, 0, 0);
            box-shadow: none;
        }
        footer, .main-container {
            display: none;
        }
        .path {
            stroke-dasharray: 1000;
            stroke-dashoffset: 1000;
            -webkit-animation: dash 5s 0.5s linear alternate both;
                font-family: Helvetica Neue;
        }
        @-webkit-keyframes dash {
            from {
                stroke-dashoffset: 1000;
                fill-opacity: 0;
            }
            to {
                stroke-dashoffset: 0;
                fill-opacity: 1;
            }
        }

