extends layout
block content
    h1 Publications
    hr
    .row.publicationsRow
        .col-sm-4
            .issue#issue1
                #downloadIssue1Cover.downloadIssueCover
                    a(href="http://www.cnn.com")
                .issue1-image
                    img(src="/img/issue1.png")
            .issue#issue2
            .issue#issue3
block extraScripts
    $("#issue1").hover(
    function() {
        $("#issue1-image").fadeOut(300);
        $("#downloadIssue1Cover").fadeIn(300);
    },
    function() {
        $("#issue1-image").fadeIn(300);
        $("#downloadIssue1Cover").fadeOut(300);        
    }
    );
